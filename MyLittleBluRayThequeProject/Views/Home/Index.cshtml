@model IndexViewModel
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyLittleBluRayThequeProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyLittleBluRayThequeProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
</head>
<body>
@{
    ViewData["Title"] = "Home Page";
}
@if(Model.SelectedBluRay == null){
<div class="list-audit-cards">
@foreach (var br in Model?.BluRays)
{
     <div class="audit-card">
    <ul>
      <h2>@br.Titre</h2>
        <span>Version : @br.Version</span> 
        <br>
      <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="@br.Id"> Plus d'information...</a>
    </ul>
  </div>
} 
</div>

}

@if(Model.SelectedBluRay != null)
{
<div class="card">
  <div class="container">
<div class ="titreBlu" >
        @Model.SelectedBluRay.Titre
</div>
    <div>
        Acteurs : @foreach (var act in Model.SelectedBluRay.Acteurs)
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
    </div>
     <div>
    Durée : @Model.SelectedBluRay.Duree
    </div>
     <div>
    Version : @Model.SelectedBluRay.Version
    </div>

    <div>
    Date de sortie : @Model.SelectedBluRay.DateSortie.ToShortDateString() @Model.SelectedBluRay.Disponible.ToString()
    </div>
    <div>Réalisateur : @Model.SelectedBluRay.Realisateur?.Nom  @Model.SelectedBluRay.Realisateur?.Prenom</div>
    <div>Scenariste : @Model.SelectedBluRay.Realisateur?.Nom  @Model.SelectedBluRay.Realisateur?.Prenom</div>
    <div>
        Acteurs : @foreach (var act in Model.SelectedBluRay.Acteurs)
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
     </div>
        <div>
        Langues disponible : @foreach (var lang in Model.SelectedBluRay.Langues)
        {
            <div> @lang.Valeur</div>
        }
        </div>
       <div>
        Sous-titres disponibles : @foreach (var ss in Model.SelectedBluRay.SsTitres)
        {
            <div> @ss.Valeur</div>
        }
        </div>
    @if (@Model.SelectedBluRay.Disponible == true)
    {
    <button class="button" >
       <a asp-area="" asp-controller="Home" asp-action="Remove" asp-route-id="@Model.SelectedBluRay.Id" disabled=true> Supprimer</a>
    </button>
    <button class="emprunter">
       <a asp-area="" asp-controller="Home" asp-action="EmpruterUnBluRay" asp-route-id="@Model.SelectedBluRay.Id" disabled= true> Emprunter</a>
    </button>
    }
    @if (@Model.SelectedBluRay.Disponible == false)
    {
        <button class="button" >
        <span>Supprimer</span>   
          </button>
          <button class="emprunter">
        <span>Emprunter</span>   
    </button>
    }

  </div>
</div>
}
</body>
</html>

