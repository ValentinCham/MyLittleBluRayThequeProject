@model IndexViewModel
@{
    ViewData["Title"] = "Selected BluRay Page";

}
<div class="card">
<div class = "container">
    <div>
    titre : @Model.SelectedBluRay.Titre
    </div>
    <div>
        Acteurs : @foreach (var act in Model.SelectedBluRay.Acteurs)
        {
            <div>nom :  @act.Nom</div>
            <div>prenom :  @act.Prenom</div>
        }
    </div>
    <div>
    Date de sortie : @Model.SelectedBluRay.DateSortie.ToShortDateString()
    </div>
</div> 
</div>

<style>
 .card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  border-radius:3%;
  background-color: rgb(232, 218, 239);
  margin-left: 30%;      
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 10px 16px;
}

h4{
	text-align: center;
}

form{
	text-align: right;
}
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  border-radius:5%;
}

h1{
	text-align:center;
}
</style>